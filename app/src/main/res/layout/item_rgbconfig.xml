<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="10dp"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/tv_colorName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="红色:"
		android:textColor="#ff0000"
		android:textSize="15sp"
		/>

	<!--R值布局-->
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="R"
			android:textSize="35sp"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_r_max"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="max"/>

			<TextView
				android:id="@+id/tv_r_min"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="min"/>
		</LinearLayout>

	</LinearLayout>


	<!--值布局-->
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="G"
			android:textSize="35sp"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_g_max"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="max"/>

			<TextView
				android:id="@+id/tv_g_min"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="min"/>
		</LinearLayout>

	</LinearLayout>

	<!--值布局-->
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="B"
			android:textSize="35sp"
			/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_b_max"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="max"/>

			<TextView
				android:id="@+id/tv_b_min"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="min"/>
		</LinearLayout>

	</LinearLayout>

	<Button
		android:id="@+id/bt_config"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:text="@string/config"/>

	<Button
		android:id="@+id/reset"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:text="@string/reset"/>


</LinearLayout>


